<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".screen.ProgressActivity">


    <ProgressBar

        android:id="@+id/progressBar1"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_margin="50dp"
        android:indeterminateOnly="true"
        android:max="100"
        android:progress="50"
        android:progressDrawable="@drawable/demo"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatSeekBar
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_margin="60dp"
        android:background="@drawable/frame_1000003584"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/progressBar1" />


    <com.creativeitinstitute.storyviewrepo.roundcornerprogressbar.TextRoundCornerProgressBar
        android:id="@+id/textProg"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginVertical="20dp"


        />


</LinearLayout>